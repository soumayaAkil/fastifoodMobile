<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp">

    <RelativeLayout

        android:id="@+id/rl_card_comR"
        style="@style/card_style_for_panier"
        tools:ignore="MissingConstraints">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageProd"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="my_pic"
            app:strokeColor="@color/teal_200"
            app:shapeAppearanceOverlay="@style/circular"
            android:src="@drawable/cheesecake"/>


        <TextView
            android:id="@+id/prixProd"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/imageProd"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="12dt"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/nomRest"
            android:textSize="18sp"
            android:textColor="@color/purple_500"

            />
        <TextView
            android:id="@+id/nomProd"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CheeseCake"
            android:textSize="18sp"
            android:textColor="@color/black"

            android:layout_toRightOf="@+id/imageProd"
            />
        <TextView
            android:id="@+id/nomRest"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baguette Baguette"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/gray"
            android:layout_below="@+id/nomProd"
            android:layout_toRightOf="@+id/imageProd"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            >

            <ImageView
                android:id="@+id/decProd"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:src="@drawable/indeterminate_box_24"/>
            <TextView
                android:id="@+id/quantite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:text="1"
                />
            <ImageView
                android:id="@+id/addProd"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:src="@drawable/add_box_24"/>
        </LinearLayout>



    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>