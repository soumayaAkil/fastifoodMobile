<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="10dp">
    <RelativeLayout

        android:id="@+id/rl_card_com"
        android:layout_marginTop="220dp"
        style="@style/card_style"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/adresse"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="14 Rue kahra citÃ© bn khaldoun tunis "
            android:textSize="14sp"

            android:textColor="@color/black"

            />



        <ProgressBar
            android:id="@+id/p_Bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="100"
            android:progress="25"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="75dp"
            android:minWidth="200dp"
            android:minHeight="50dp"
            />

        <TextView
            android:id="@+id/somme_com"
            android:layout_marginTop="30dp"
            android:layout_below="@id/adresse"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="40dt"

            android:textSize="18sp"
            android:textColor="@color/purple_500"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:id="@+id/modepaye"
            android:layout_marginTop="0dp"
            android:layout_below="@id/adresse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="a livraison"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/date"
            android:text="12/04/1999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            />


        <TextView
            android:id="@+id/etat"
            android:textSize="18sp"
            android:text="partiel"
            android:layout_marginTop="30dp"
            android:layout_below="@id/adresse"
            android:textColor="@color/purple_500"
            android:layout_width="wrap_content"
            android:layout_height="30dp"

            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/heure"
            android:layout_below="@id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="12:30h"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>