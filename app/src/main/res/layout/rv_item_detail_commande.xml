<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="10dp">

    <RelativeLayout

        android:id="@+id/rl_card_comR"
        style="@style/card_style"
        tools:ignore="MissingConstraints"
        android:layout_width="350dp"
        >
        <ImageView
            android:id="@+id/imageProd"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/baguette"

            />



        <TextView
            android:id="@+id/prixProd"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/imageProd"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="40dt"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/nomProd"
            android:textSize="18sp"
            android:textColor="@color/purple_500"

            />
        <TextView
            android:id="@+id/quantite"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="18sp"
            android:textColor="@color/black"

            android:layout_toRightOf="@+id/imageProd"
            />
        <TextView
            android:id="@+id/nomProd"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="makloub"
            android:textSize="18sp"
            android:textColor="@color/black"

            android:layout_toRightOf="@+id/imageProd"
            />
        <TextView
            android:id="@+id/unite"
            android:layout_marginLeft="180dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="maxi"
            android:textSize="18sp"
            android:textColor="@color/black"

            android:layout_toRightOf="@+id/imageProd"
            />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>